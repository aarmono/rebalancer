<!DOCTYPE html>

<html>
<head>
<style>
table, th, td {
  border: 1px solid black;
}
</style>
</head>
<title>Account Configuration</title>
<body>

<form action="/configure/update" method="post" enctype="multipart/form-data">

<input type="hidden" name="user_token" value="{{user_token}}" />

<%
asset_ids = dict(database.get_asset_abbreviations())
portfolio = session.get_portfolio()
assets = sorted(portfolio.keys(), key=lambda x: asset_ids[x])
%>

% include('templates/account_config_editor.tmpl', account_entries = session.get_account_entries(), database = database)
% include('templates/target_asset_editor.tmpl', account_target = session.get_account_target(), assets = assets, database = database)
% include('templates/asset_editor.tmpl', account_target = session.get_account_target(), database = database)

<input type="submit" value="Update Config" />
</form>

<p>
  <a href="/">Go Home</a>
</p>

</body>
</html>